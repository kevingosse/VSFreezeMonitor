<UserControl x:Class="FreezeMonitor.SettingsToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="350"
             Background="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowBackgroundBrushKey}}"
             Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="12,10,12,12">

            <TextBlock Text="PROFILER SETTINGS" FontSize="10" Opacity="0.6" Margin="0,0,0,12"/>

            <!-- Profiling mode -->
            <TextBlock Text="Profiling mode" Margin="0,0,0,6"/>
            <RadioButton x:Name="ModeOff"
                         Content="Off"
                         GroupName="ProfilingMode"
                         Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"
                         Checked="AutoSave"
                         Margin="0,0,0,4"/>
            <RadioButton x:Name="ModeOnlyWhenSolutionLoaded"
                         Content="Only when solution loaded"
                         GroupName="ProfilingMode"
                         Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"
                         Checked="AutoSave"
                         Margin="0,0,0,4"/>
            <RadioButton x:Name="ModeAlwaysOn"
                         Content="Always on"
                         GroupName="ProfilingMode"
                         Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowTextBrushKey}}"
                         Checked="AutoSave"
                         Margin="0,0,0,14"/>

            <!-- Delay before profiling -->
            <TextBlock Text="Delay before profiling (seconds)" Margin="0,0,0,4"/>
            <TextBox x:Name="StartDelayTextBox"
                     Width="80" HorizontalAlignment="Left"
                     LostFocus="AutoSave"
                     Margin="0,0,0,4"/>
            <TextBlock x:Name="StartDelayError"
                       Foreground="{DynamicResource {x:Static vsui:EnvironmentColors.ToolWindowValidationErrorTextBrushKey}}"
                       FontSize="11"
                       Visibility="Collapsed"
                       Margin="0,0,0,10"/>

            <!-- Snapshot folder -->
            <TextBlock Text="Snapshot folder" Margin="0,0,0,4"/>
            <DockPanel Margin="0,0,0,16">
                <Button x:Name="BrowseButton"
                        DockPanel.Dock="Right"
                        Content="Browse..."
                        Click="BrowseButton_Click"
                        Padding="8,2" Margin="6,0,0,0"/>
                <TextBox x:Name="SnapshotFolderTextBox" LostFocus="AutoSave"/>
            </DockPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
